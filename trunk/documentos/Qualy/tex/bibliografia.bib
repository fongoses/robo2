@ARTICLE{Pedrosa2001,
  author = {Diogo Pinheiro Fernandes Pedrosa and Adelardo Adelino Dantas Medeiros
	and Pablo Javier Alsina},
  title = {Sistema de navega\c{c}\~{a}o para rob\^{o}s m\'{o}veis aut\^{o}nomos},
  journal = {Latin American Knowledge Harvester},
  year = {2001},
  month = oct,
  abstract = {Um dos maiores problemas em rob\'{o}tica m\'{o}vel diz respeito \`{a}
	sua navega\c{c}\~{a}o. Conceitualmente, o ato de navegar em rob\'{o}tica
	consiste em guiar um rob\^{o} em um espa\c{c}o de trabalho durante
	um determinado intervalo de tempo, por um caminho que possa ser percorrido
	e que leve o rob\^{o} de uma posi\c{c}\~{a}o e orienta\c{c}\~{a}o
	iniciais para uma posi\c{c}\~{a}o e orienta\c{c}\~{a}o finais. Esta
	\'{e} a principal tarefa que um rob\^{o} m\'{o}vel deve executar.
	Ela implica em subproblemas que s\~{a}o a localiza\c{c}\~{a}o do
	rob\^{o} no espa\c{c}o de trabalho, o planejamento de um caminho
	admiss\'{i}vel, a gera\c{c}\~{a}o de uma trajet\'{o}ria e, por fim,
	a sua execu\c{c}\~{a}o. Al\'{e}m disso, rob\^{o}s m\'{o}veis aut\^{o}nomos
	com rodas possuem restri\c{c}\~{o}es cinem\'{a}ticas, chamadas tamb\'{e}m
	de restri\c{c}\~{o}es n\~{a}o-holon\^{o}micas, que fazem com que
	o rob\^{o} n\~{a}o possa se mover livremente em seu espa\c{c}o de
	trabalho, limitando a quantidade de caminhos admiss\'{i}veis entre
	duas posi\c{c}\~{o}es distintas. Este trabalho aborda principalmente
	os subproblemas do planejamento de caminho e gera\c{c}\~{a}o de trajet\'{o}ria
	aplicado a minirrob\^{o}s m\'{o}veis com rodas que atuam em um projeto
	de futebol de rob\^{o}s. O maior desafio para a navega\c{c}\~{a}o
	destes ve\'{i}culos \'{e} determinar uma fun\c{c}\~{a}o cont\'{i}nua
	que respeite suas restri\c{c}\~{o}es cinem\'{a}ticas e evolua no
	tempo segundo as restri\c{c}\~{o}es impostas pelo problema quanto
	\`{a} posi\c{c}\~{a}o e orienta\c{c}\~{a}o iniciais e finais e quanto
	\`{a} velocidade do movimento. Prop\~{o}e-se uma estrat\'{e}gia de
	gera\c{c}\~{a}o de caminho baseada em polin\^{o}mios param\'{e}tricos
	de terceiro grau em 'x' e 'y'. A orienta\c{c}\~{a}o 'theta' do minirrob\^{o}
	\'{e} obtida da rela\c{c}\~{a}o entre 'y' e 'x' de modo que os caminhos
	gerados respeitem a restri\c{c}\~{a}o cinem\'{a}tica imposta. Para
	que a trajet\'{o}ria seja executada e os resultados experimentais
	validados \'{e} apresentada uma estrat\'{e}gia simples de controle
	que atua sobre as velocidades linear e angular desenvolvidas pelo
	rob\^{o} m\'{o}vel. },
  url = {http://lakh.unm.edu/handle/10229/14268}
}

