@PHDTHESIS{Calvo2007,
  author = {Rodrigo Calvo and Roseli Aparecida Francelin Romero},
  title = {Arquitetura h\'{i}brida inteligente para navega\c{c}\~{a}o aut\^{o}noma
	de rob\^{o}s},
  school = {Universidade de S\~{a}o Paulo - {ICMC}},
  year = {2007},
  month = mar,
  abstract = {Este projeto consiste em um sistema de navega\c{c}\~{a}o aut\^{o}nomo
	baseado em redes neurais nebulosas modulares capacitando o rob\^{o}
	a alcan\c{c}ar alvos, ou pontos metas, em ambientes desconhecidos.
	Inicialmente, o sistema n\~{a}o tem habilidade para a navega\c{c}\~{a}o,
	ap\'{o}s uma fase de experimentos com algumas colis\~{o}es, o mecanismo
	de navega\c{c}\~{a}o aprimora-se guiando o rob\^{o} ao alvo de forma
	eficiente. Uma arquitetura h\'{i}brida inteligente \'{e} apresentada
	para este sistema de navega\c{c}\~{a}o, baseada em redes neurais
	artificiais e l\'{o}gica nebulosa. A arquitetura \'{e} hier\'{a}rquica
	e costitiui-se de dois m\'{o}dulos respons\'{a}veis por gerar comportamentos
	inatos de desvio de obst\'{a}culos e de busca ao alvo. Um mecanismo
	de aprendizagem por refor\c{c}o, baseada em uma extens\~{a}o da lei
	de Hebb, pondera os comportamentos inatos conflitantes ajustando
	os pesos sin\'{a}pticos das redes neurais nos instantes de captura
	do alvo e de colis\~{a}o contra obst\'{a}culos. A abordagem consolidada
	em simula\c{c}\~{a}o \'{e} validada em ambientes reais neste trabalho.
	Para tanto, este sistema foi implementado e testado no simulador
	Saphira, ambiente de simula\c{c}\~{a}o que acompanha o rob\^{o} Pioneer
	I e que denota um est\'{a}gio anterior aos testes em ambientes reais
	por apresentar comportamentos do rob\^{o} similares aos comportamentos
	do rob\^{o} m\'{o}vel. Modifica\c{c}\~{o}es na arquitetura h\'{i}brida
	foram necess\'{a}rias para adaptar o sistema de navega\c{c}\~{a}o
	simulado ao sistema incorporado no Pioneer I. Experimentos em ambientes
	reais demonstraram a efici\^{e}ncia e a capacidade de aprendizagem
	do sistema de navega\c{c}\~{a}o, validando a arquitetura h\'{i}brida
	inteligente para aplica\c{c}\~{a}o em rob\^{o}s m\'{o}veis},
  url = {http://www.teses.usp.br/teses/disponiveis/55/55134/tde-15062007-161911/}
}

